  </header>
  <!-- banner flex donate page -->
    <div class="BrowseFundraiser_banner_wrapper__I48Td undefined">
      <div class="BrowseFundraiser_banner_content_wrapper__tBbxx">
        <div>
          <p class="BrowseFundraiser_bf_heading__1E5q0">
            Hello, Changemaker!
          </p>
          <p class="BrowseFundraiser_bf_subheading__gCL6F">
            Ready to make an impact? Donate to make a difference! 
          </p>
        </div>
      </div>
    </div>

  <div class="container mt-5">
    <h1 class="text-center charity-line">
      Choose a Charity to Support <hr>
    </h1>
    
    <div class="row">
      <% charities.forEach(function(charity) { %>
        <div class="charity-card">
            <!-- <% console.log(charity.img) %>  -->
            <img src="/uploads/<%= charity.img %>" alt="<%= charity.chname %>">
            <div class="card-body">
              <h5 class="card-title"><%= charity.chname %></h5>
              <p class="card-text">Purpose: <%= charity.purpose %></p>
              <p class="card-text">Founder: <%= charity.fname %></p>

              <form action="/donateForm" method="get">
                <input type="hidden" name="chid" value="<%= charity.chid %>">
                <button type="submit" class="btn btn-primary donate-button">Donate</button>
              </form>
              
            </div>
        </div>
      <% }); %>
    </div>
  </div>

  <footer>
    <div class="part4-1">
