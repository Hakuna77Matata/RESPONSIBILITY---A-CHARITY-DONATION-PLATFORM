  </script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
    const textItems = document.querySelectorAll('.BrowseFundraiser_bf_heading__1E5q0');
    let delay = 0;
    
    textItems.forEach(item => {
        setTimeout(() => {
            item.style.opacity = 1;
        }, delay);
        delay += 10000; // Change this value to adjust timing
      });
    });
  </script>
